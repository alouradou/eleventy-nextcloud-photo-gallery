<div class="gallery">
    <ul class="gallery-list">
        {% if year %}
            {% set events = collections.events | filterByYear(year.name) %}

            {% if events.length === 0 %}
                <p>No event for year {{ year.name }}. Come back later!</p>
            {% endif %}
        {% else %}
            {% set events = collections.events %}
        {% endif %}

        {% for event in events %}
            <li class="gallery-item">
                <a
                  href="{{ event.url }}"
                >
              <div class="image-block">
                  <h2>{{ event.name }}</h2>
                  <p>{{ event.url }}</p>
                  <p>From {{ event.year }}</p>
              </div>
            </a>
            </li>
        {% endfor %}
    </ul>
</div>
